<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonChangeTitle"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change toolbar title"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetVisible"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set toolbar visible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetGone"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set toolbar gone"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetInvisible"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set toolbar invisible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAnimateVisible"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Animate toolbar visible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAnimateGone"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Animate toolbar gone"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAnimateInvisible"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Animate toolbar invisible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetOverrideUp"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="set toolbar override up"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRemoveOverrideUp"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="remove toolbar override up"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetNavViewVisibile"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="set navView visible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetNavViewGone"
                android:minHeight="0dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="set navView gone"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>