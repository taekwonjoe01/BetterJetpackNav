<resources>
    <!-- Base application theme. -->
    <style name="BaseNavUiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BaseSampleTheme" parent="BaseNavUiTheme">
        <!--Below are examples to change the Toolbar action menu style. You can only do this here and not at runtime (for some stupid ass reason)-->
        <item name="actionMenuTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this changes the menu items ONLY if they're in the toolbar-->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!--For some stupid ass reason, this is the only way to change the menu items textappearance-->
        <item name="android:itemTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this is the only way to change the menu icon colors...-->
        <item name="android:colorControlNormal">@android:color/holo_red_dark</item>
    </style>
    <style name="SampleSideNavTheme" parent="BaseSampleTheme">
        <!--Some styling is done in the OnCreate of the activity, to show how to do some of that.-->

        <!--Below are examples to change the Toolbar action menu style. You can only do this here and not at runtime (for some stupid ass reason)-->
        <item name="actionMenuTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this changes the menu items ONLY if they're in the toolbar-->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!--For some stupid ass reason, this is the only way to change the menu items textappearance-->
        <item name="android:itemTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this is the only way to change the menu icon colors...-->
        <item name="android:colorControlNormal">@android:color/holo_red_dark</item>
    </style>
    <style name="SampleBottomNavTheme" parent="BaseSampleTheme">
        <!--Some styling is done in the OnCreate of the activity, to show how to do some of that.-->

        <!--Below are examples to change the Toolbar action menu style. You can only do this here and not at runtime (for some stupid ass reason)-->
        <item name="actionMenuTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this changes the menu items ONLY if they're in the toolbar-->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!--For some stupid ass reason, this is the only way to change the menu items textappearance-->
        <item name="android:itemTextAppearance">@style/ActionMenuTheme</item>
        <!--For some stupid ass reason, this is the only way to change the menu icon colors...-->
        <item name="android:colorControlNormal">@android:color/holo_red_dark</item>
    </style>

    <style name="SideToolbarTitleTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SideToolbarSubTitleTextAppearance">
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ActionMenuItemTextAppearance">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ActionMenuTheme">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">5sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
