<resources>
    <!-- BEGIN NAVIGATION CONSTAINTS -->
    <!-- Navigation constants must be defined here in this xml file because they must be accessible
    in the navigation_graph.
    -->

    <!-- navigation_override_up will make it so that if a fragment would normally have back navigation,
    we override the default behavior of showing UP and fall back to that navigation type's "root" display option.
    default is false.
    -->
    <string name="navigation_override_up">navigation_override_up</string>
    <!-- navigation_hide_toolbar configures whether or not the toolbar is hidden.
    default is false (not hidden).
    -->

    <!-- navigation_toolbar_visibility configures whether or not the toolbar is hidden.
    default is false (not hidden).
    -->
    <string name="navigation_toolbar_visibility">navigation_toolbar_visibility</string>
    <integer name="navigation_toolbar_visibility_visible">0</integer>
    <integer name="navigation_toolbar_visibility_invisible">1</integer>
    <integer name="navigation_toolbar_visibility_gone">2</integer>

    <!-- navigation_view_gone configured whether or not the Nav View is hidden for a specific
    fragment.
    default is false (not hidden).
    -->
    <string name="navigation_view_gone">navigation_view_gone</string>
    <!-- END NAVIGATION CONSTAINTS -->
</resources>
